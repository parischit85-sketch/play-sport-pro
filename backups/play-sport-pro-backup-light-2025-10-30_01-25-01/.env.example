# Firebase (copy these into Netlify Environment Variables with VITE_ prefix)
VITE_FIREBASE_API_KEY=your_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project
VITE_FIREBASE_APP_ID=1:xxxx:web:yyyy
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=xxxxxx
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXX

# Feature flags
VITE_AUTH_EMAIL_LINK_ENABLED=false
VITE_ENABLE_LEGACY_LEAGUES=false  # Shows legacy Cloud Backup panel in Extra.jsx (deprecated)

# ========================================
# Web Push Notifications (VAPID Keys)
# ========================================
# Genera con: npx web-push generate-vapid-keys
# Oppure esegui: .\generate-vapid-keys.ps1
# 
# IMPORTANTE: 
# - La PUBLIC KEY va anche aggiornata in src/utils/push.js
# - Configura queste variabili su Netlify (senza prefisso VITE_)
# - NON committare mai chiavi private nel repository

VAPID_PUBLIC_KEY=your-public-key-here
VAPID_PRIVATE_KEY=your-private-key-here

