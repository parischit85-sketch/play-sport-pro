// Logout
export async function logout() {
  // Clear admin session if active
  if (currentAdminUser) {
    currentAdminUser = null;
    // Notify all auth listeners
    authCallbacks.forEach(callback => {
      try {
        callback(null);
      } catch (error) {
        console.error('Admin logout callback error:', error);
      }
    });
    return;
  }
  
  await signOut(auth);
}

